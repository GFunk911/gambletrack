%h2= 'Lines'
- if defined?(active) && active
  = link_to_remote 'Show Expired Lines', :update => 'lines', :url => {:controller => 'line', :action => 'show', :id => lines.id, :obj_class => lines.class, :active => false}
- else
  = link_to_remote 'Hide Expired Lines', :update => 'lines', :url => {:controller => 'line', :action => 'show', :id => lines.id, :obj_class => lines.class, :active => true}

- form_for(lines) do |f|
  %table
    %div#lines
      - form_lines = (defined?(active) && active) ? lines.lines.active : lines.lines
      = f.render_associated_form(form_lines, :new => 2, :partial => 'game/line_wrap', :locals => {:lines => lines})
  %br
  - if lines.respond_to?(:away_score)
    Away Score:
    = f.text_field :away_score, :size => 4
    Home Score:
    = f.text_field :home_score, :size => 4
  %br
  = f.submit 'Save'