= game.time + " #{game.sport.abbr} "
= "#{game.away_team}@#{game.home_team} "
= "#{game.open_spread} => #{game.current_spread} "
= "#{game.anti_public_team} #{game.anti_public_percent} "
= "Margin: #{game.margin}, Score: #{game.total_score} "
- remote_form_for(:make_bet, MakeBet.new(:game_id => game.id), :url => {:controller => 'make_bets', :action => 'create'}, :html => {:method => :post, :onsubmit => "clearBetForm(#{game.id})" }) do |f|
  %table{:style => "float:top"}
    %tr
      %td= f.text_field :spread, :size => 2, :id => "bet_form_#{game.id}_spread"
      %td= f.text_field :odds, :size => 2, :id => "bet_form_#{game.id}_odds"
      %td= f.text_field :amount, :size => 2, :id => "bet_form_#{game.id}_amount"
      = f.hidden_field :game_id
      %td= f.submit 'Bet'
%span{:id => "market_status_#{game.id}"}
- if game.anti_public_team
  %script
    = remote_function market_status_hash(game)