- cache(:controller => 'main', :action => 'show', :id => 'top_left' ) do
  %li= link_to 'Load Matchbook Lines', :controller => 'main', :action => 'load_matchbook' 
  %li= link_to 'Load Matchbook Bets', :controller => 'main', :action => 'load_bets' 
  - str = "Today's Starting Bankroll: $" + Bankroll.new(:start_dt => Time.local(2008,10,14), :start_amount => 75000).current.to_i.to_s 
  %li= str
  %li= link_to "Today's Profit: $" + Bankroll.new(:start_dt => Time.my_current.start_of_day, :end_dt => Time.my_current).change.to_i.to_s, :controller => 'game', :action => 'index', :search_id => Search.find_by_name("Today's Games")
  %li= link_to "Yesterday's Profit: $" + Bankroll.new(:start_dt => Time.my_current.start_of_day - 1.days, :end_dt => Time.my_current.start_of_day).change.to_i.to_s, :controller => 'game', :action => 'index', :search_id => Search.find_by_name("Yesterday's Games")