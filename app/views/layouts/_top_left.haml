- cache(:controller => 'main', :action => 'show', :id => 'top_left' ) do
  %li= link_to 'Load Matchbook Lines', :controller => 'main', :action => 'load_matchbook' 
  %li= link_to 'Load Matchbook Bets', :controller => 'main', :action => 'load_bets' 
  %li= "Today's Starting Bankroll: $" + Bankroll.start.current.to_i.to_s 
  %li= link_to "Today's Profit: " + Bankroll.new(:start_dt => Time.my_current.start_of_day, :end_dt => Time.my_current).change_wagered_to_s, :controller => 'game', :action => 'index', :search_id => Search.find_by_name("Today's Games")
  %li= link_to "Yesterday's Profit: " + Bankroll.new(:start_dt => Time.my_current.start_of_day - 1.days, :end_dt => Time.my_current.start_of_day).change_wagered_to_s, :controller => 'game', :action => 'index', :search_id => Search.find_by_name("Yesterday's Games")